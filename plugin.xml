<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="com.cyruscvc.docscanner"
        version="1.0.0">

    <name>MLKitDocScanner</name>

    <js-module src="www/MLKitDocScanner.js" name="MLKitDocScanner">
        <clobbers target="MLKitDocScanner" />
    </js-module>

    <platform name="android">
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.CAMERA" />
        </config-file>
        <framework src="com.google.mlkit:text-recognition:16.0.0" />
        <framework src="com.google.mlkit:vision-common:17.0.0" />
        <feature name="MLKitDocumentScanner">
            <param name="android-package" value="com.google.android.gms.vision.document.DocumentScanner" />
        </feature>
        <source-file src="src/android/MLKitDocScanner.java" target-dir="src/com/cyruscvc/docscanner" />
    </platform>
</plugin>
